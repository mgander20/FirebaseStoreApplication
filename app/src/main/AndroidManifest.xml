<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madelyngander.firebasestoreapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/firestore_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/firestore_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirebaseStoreApp">
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.FirebaseStoreApp.NoActionBar" />
        <activity
            android:name=".activity.BaseActivity"
            android:exported="false"
            android:theme="@style/Theme.FirebaseStoreApp.NoActionBar" />
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FirebaseStoreApp.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FirebaseStoreApp.NoActionBar" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FirebaseStoreApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
    </application>

</manifest>